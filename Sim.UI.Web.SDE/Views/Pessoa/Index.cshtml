@model Sim.UI.Web.SDE.ViewModels.VMPessoaIndex

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Novo">Create New</a>
</p>

@if (ViewBag.IsMessage == true)
{
    <div class="alert alert-danger alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
        @ViewBag.Message
    </div>
}

<form asp-action="Index">
    <div class="form-row">
        <div class="form-group">
            <span asp-validation-for="NomeOuCPF" class="text-danger"></span>
            <div class="input-group mb-3">
                <input asp-for="NomeOuCPF" class="form-control" placeholder="Nome ou CPF" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit" role="button" id="button-addon2"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </div>

</form>

<table class="table table-hover">
    <caption>Lista de pessoas</caption>
    <thead>
        <tr>
            <th></th>
            <th>
                Nome
            </th>

            <th>
                CPF
            </th>

            <th>
                E-mail
            </th>

            <th>
                Telefone
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaPessoas)
        {
        <tr>
            <td>
                <a href="" class="btn btn-sm btn-success" title="Iniciar atendimento"><i class="far fa-clock"></i></a>
            </td>
            <td>

                @{
                    if ((item.Nome_Social != null) || (item.Nome_Social != string.Empty))
                    {

                        @Html.DisplayFor(modelItem => item.Nome_Social)

                    }
                    else
                        @Html.DisplayFor(modelItem => item.Nome)

                }

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Tel_Movel)
            </td>

            <td>
                <a href="@Url.Action("Details", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-info" title="Detalhar informações"><i class="far fa-list-alt"></i></a>
                <a href="@Url.Action("Edit", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-info" title="Alterar informações"><i class="far fa-edit"></i></a>
                <a href="@Url.Action("Delete", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-danger" title="Excluir informações"><i class="far fa-window-close"></i></a>

                <!--
        Html.ActionLink("Edit", "Edit", new { id = item.Pessoa_Id }) |
        Html.ActionLink("Details", "Details", new { id = item.Pessoa_Id }) |
        Html.ActionLink("Delete", "Delete", new { id = item.Pessoa_Id })-->
            </td>
        </tr>
        }
    </tbody>
</table>
