@model IEnumerable<Sim.Web.SecDE.Models.VM_Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <caption>Lista de pessoas</caption> 
    <thead>
        <tr>
            <th></th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.CPF)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.Tel_Movel)
            </th>

            <th scope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="" class="btn btn-sm btn-success" title="Iniciar atendimento"><i class="far fa-clock"></i></a>
                </td>
                <td>

                    @{
                        if ((item.Nome_Social != null) || (item.Nome_Social != string.Empty))
                        {

                            @Html.DisplayFor(modelItem => item.Nome_Social)

                        }
                        else
                            @Html.DisplayFor(modelItem => item.Nome)

                    }

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Tel_Movel)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a href="@Url.Action("Edit", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-info" title="Alterar informações"><i class="far fa-list-alt"></i></a>
                    <a href="@Url.Action("Details", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-info" title="Detalhar informações"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("Delete", "Pessoa", new { id = item.Pessoa_Id })" class="btn btn-sm btn-danger" title="Excluir informações"><i class="far fa-window-close"></i></a>

                    <!--
                    Html.ActionLink("Edit", "Edit", new { id = item.Pessoa_Id }) |
                    Html.ActionLink("Details", "Details", new { id = item.Pessoa_Id }) |
                    Html.ActionLink("Delete", "Delete", new { id = item.Pessoa_Id })-->
                </td>
            </tr>
        }
    </tbody>
</table>
