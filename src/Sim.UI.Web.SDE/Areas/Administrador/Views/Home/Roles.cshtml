@using Sim.UI.Web.SDE.Areas.Administrador.ViewModels
@using Sim.UI.Web.SDE.Areas.Administrador.Views.Home
@model VMRoles
@{
    Layout = "_Layout.cshtml";

    ViewData["Title"] = "Roles";
    ViewData["ActivePage"] = AdminNavPages.Roles;
}

<h4>Gerenciar Roles</h4>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Roles" method="post">
            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 d-md-block">
                    <button class="btn btn-primary" type="submit">Gravar</button>
                </div>
            </div>
        </form>
    </div>
    <hr />
    <div class="col-md">
        <div class="row g-3">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>
                            Role Name
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Roles)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item)
                            </td>
                            
                            <td>
                            </td>

                            <td>
                                <a href="@Url.Action("Details", "Admin", new { id = item })" class="btn btn-xs btn-info" title="Exibir detalhes"><i class="glyphicon glyphicon-list-alt"></i></a>
                                <a href="@Url.Action("Edit", "Admin", new { id = item })" class="btn btn-xs btn-warning" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>